		<property name="dataSource" ref="dataSource" />
	</bean>
	-->
	<!-- bean DAO -->
	<context:component-scan base-package="it.csi.pbandi.pbservrest.integration.dao" />
	
	
	<context:property-placeholder location="classpath:/enviromentTest.properties" />

</beans>